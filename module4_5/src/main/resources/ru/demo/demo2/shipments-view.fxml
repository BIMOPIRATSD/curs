<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.demo.demo2.controller.ShipmentsController">
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
    
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Отгрузки переработчику"/>
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Поиск:"/>
        <TextField fx:id="tfSearch" prefWidth="300" promptText="Введите получателя или номер документа"/>
    </HBox>
    
    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colBatch" text="Партия (этап)" prefWidth="300"/>
            <TableColumn fx:id="colRecipient" text="Получатель" prefWidth="200"/>
            <TableColumn fx:id="colWeight" text="Вес (кг)" prefWidth="100"/>
            <TableColumn fx:id="colTransportDoc" text="Транспортный документ" prefWidth="180"/>
        </columns>
    </TableView>
    
    <HBox spacing="10" style="-fx-background-color: #f5f5f5; -fx-padding: 10; -fx-border-radius: 5;">
        <VBox spacing="5">
            <Label text="Партия (этап отгрузки):"/>
            <ComboBox fx:id="cbBatch" prefWidth="250"/>
        </VBox>
        <VBox spacing="5">
            <Label text="Получатель:"/>
            <TextField fx:id="tfRecipient" prefWidth="200"/>
        </VBox>
        <VBox spacing="5">
            <Label text="Вес (кг):"/>
            <TextField fx:id="tfWeight" prefWidth="100"/>
        </VBox>
        <VBox spacing="5">
            <Label text="Транспортный документ:"/>
            <TextField fx:id="tfTransportDoc" prefWidth="150"/>
        </VBox>
        <VBox spacing="5">
            <Label text="Оператор:"/>
            <ComboBox fx:id="cbOperator" prefWidth="150"/>
        </VBox>
    </HBox>
    
    <HBox spacing="10">
        <Button text="Добавить" onAction="#onAdd" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Изменить" onAction="#onUpdate" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        <Button text="Удалить" onAction="#onDelete" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        <Button text="Очистить" onAction="#onClear"/>
    </HBox>
</VBox>
