<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.demo.demo2.controller.StorageController">
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
    
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Склад (ячейки хранения)"/>
        <Label fx:id="lblStatus" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
    </HBox>
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Поиск:"/>
        <TextField fx:id="tfSearch" prefWidth="300" promptText="Введите код ячейки"/>
    </HBox>
    
    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colCode" text="Код ячейки" prefWidth="120"/>
            <TableColumn fx:id="colMaxCapacity" text="Вместимость (кг)" prefWidth="150"/>
            <TableColumn fx:id="colCurrentLoad" text="Загрузка (кг)" prefWidth="150"/>
            <TableColumn fx:id="colAvailable" text="Доступно" prefWidth="120"/>
            <TableColumn fx:id="colPercentage" text="Заполнено" prefWidth="100"/>
        </columns>
    </TableView>
    
    <HBox spacing="10" style="-fx-background-color: #f5f5f5; -fx-padding: 10; -fx-border-radius: 5;">
        <VBox spacing="5">
            <Label text="Код ячейки:"/>
            <TextField fx:id="tfCode" prefWidth="120"/>
        </VBox>
        <VBox spacing="5">
            <Label text="Макс. вместимость (кг):"/>
            <TextField fx:id="tfMaxCapacity" prefWidth="150"/>
        </VBox>
        <VBox spacing="5">
            <Label text="Текущая загрузка (кг):"/>
            <TextField fx:id="tfCurrentLoad" prefWidth="150"/>
        </VBox>
        <VBox spacing="5" alignment="CENTER">
            <Label text="Загрузка:"/>
            <ProgressBar fx:id="progressBar" prefWidth="150"/>
        </VBox>
    </HBox>
    
    <HBox spacing="10">
        <Button text="Добавить" onAction="#onAdd" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Изменить" onAction="#onUpdate" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        <Button text="Удалить" onAction="#onDelete" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        <Button text="Очистить" onAction="#onClear"/>
    </HBox>
</VBox>
