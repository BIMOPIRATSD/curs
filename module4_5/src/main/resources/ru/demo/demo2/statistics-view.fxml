<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.demo.demo2.controller.StatisticsController">
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
    
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Статистика и отчёты"/>
        <Label fx:id="lblStorageStatus" style="-fx-font-size: 14px; -fx-text-fill: #2E7D32; -fx-font-weight: bold;"/>
    </HBox>
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Период:"/>
        <DatePicker fx:id="dpFrom" prefWidth="130"/>
        <Label text="—"/>
        <DatePicker fx:id="dpTo" prefWidth="130"/>
        <Label text="Год графика:"/>
        <ComboBox fx:id="cbYear" prefWidth="100"/>
        <Button text="Обновить" onAction="#onRefresh" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>
    
    <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS">
        <VBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Оборот по видам вторсырья"/>
            <TableView fx:id="wasteTypeTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colWasteType" text="Вид вторсырья" prefWidth="150"/>
                    <TableColumn fx:id="colReceived" text="Принято (кг)" prefWidth="100"/>
                    <TableColumn fx:id="colShipped" text="Отгружено (кг)" prefWidth="110"/>
                    <TableColumn fx:id="colStock" text="Остаток (кг)" prefWidth="100"/>
                    <TableColumn fx:id="colCount" text="Приёмок" prefWidth="80"/>
                </columns>
            </TableView>
        </VBox>
        
        <VBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Статистика по поставщикам"/>
            <TableView fx:id="supplierTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colSupplierName" text="Поставщик" prefWidth="200"/>
                    <TableColumn fx:id="colSupplierType" text="Тип" prefWidth="80"/>
                    <TableColumn fx:id="colTotalWeight" text="Всего (кг)" prefWidth="100"/>
                    <TableColumn fx:id="colReceiptsCount" text="Приёмок" prefWidth="80"/>
                </columns>
            </TableView>
        </VBox>
    </SplitPane>
    
    <VBox fx:id="chartContainer" prefHeight="400" style="-fx-border-color: #cccccc; -fx-border-width: 1;">
        <Label text="График динамики приёма (загружается...)" style="-fx-padding: 10;"/>
    </VBox>
</VBox>
