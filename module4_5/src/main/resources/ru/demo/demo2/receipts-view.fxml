<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.demo.demo2.controller.ReceiptsController">
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
    
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Приёмные партии"/>
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Поиск:"/>
        <TextField fx:id="tfSearch" prefWidth="300" promptText="Введите поставщика или вид сырья"/>
    </HBox>
    
    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colSupplier" text="Поставщик" prefWidth="200"/>
            <TableColumn fx:id="colWasteType" text="Вид вторсырья" prefWidth="150"/>
            <TableColumn fx:id="colWeight" text="Вес (кг)" prefWidth="100"/>
            <TableColumn fx:id="colDatetime" text="Дата/время" prefWidth="150"/>
            <TableColumn fx:id="colOperator" text="Оператор" prefWidth="100"/>
        </columns>
    </TableView>
    
    <HBox spacing="10" style="-fx-background-color: #f5f5f5; -fx-padding: 10; -fx-border-radius: 5;">
        <VBox spacing="5">
            <Label text="Поставщик:"/>
            <ComboBox fx:id="cbSupplier" prefWidth="200"/>
        </VBox>
        <VBox spacing="5">
            <Label text="Вид вторсырья:"/>
            <ComboBox fx:id="cbWasteType" prefWidth="150"/>
        </VBox>
        <VBox spacing="5">
            <Label text="Вес (кг):"/>
            <TextField fx:id="tfWeight" prefWidth="100"/>
        </VBox>
        <VBox spacing="5">
            <Label text="Оператор:"/>
            <ComboBox fx:id="cbOperator" prefWidth="150"/>
        </VBox>
    </HBox>
    
    <HBox spacing="10">
        <Button text="Добавить" onAction="#onAdd" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Изменить" onAction="#onUpdate" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        <Button text="Удалить" onAction="#onDelete" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        <Button text="Очистить" onAction="#onClear"/>
    </HBox>
</VBox>
